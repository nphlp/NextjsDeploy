# Editor links
REACT_EDITOR=code

# Node environment
NODE_ENV=development

# Build output
NEXTJS_STANDALONE=false

# Base URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Docker configuration
ENV_LABEL=dev-nextjs-deploy

# Traefik Configuration
# VPS_SUB_DOMAIN=front
# VPS_DOMAIN=local.dev

# Prisma
DATABASE_URL=postgres://postgres:nextjs-deploy-password@localhost:5433/nextjs-deploy-db

# PostgreSQL host
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# PostgreSQL Configuration
POSTGRES_DB=nextjs-deploy-db
POSTGRES_PASSWORD=nextjs-deploy-password

# Better Auth encryption key (use `openssl rand -base64 32`)
BETTER_AUTH_SECRET=better-auth-session-encryption-key

# Ngrok Static URL
# NGROK_URL=https://your-static-domain.ngrok-free.app

SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465

SMTP_USER=hello@domain.com
SMTP_PASSWORD=smtp-password

SMTP_FROM_NAME="Nextjs Deploy"
SMTP_FROM=hello@domain.com

# Prisma Studio Basic Auth (generate with: htpasswd -nb user password)
# Double $$ for Docker Compose: admin:$apr1$... -> admin:$$apr1$$...
PRISMA_STUDIO_AUTH=admin:$$apr1$$xxxxxxxx$$xxxxxxxxxxxxxxxxxxxx
