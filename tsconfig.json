{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true, // differentiate between null and undefined
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@atoms/*": ["./components/atoms/*"],
            "@molecules/*": ["./components/molecules/*"],
            "@organisms/*": ["./components/organisms/*"],
            "@actions/*": ["./actions/*"],
            "@app/*": ["./app/*"],
            "@api/*": ["./app/api/*"],
            "@cache/*": ["./cache/*"],
            "@class/*": ["./services/class/*"],
            "@comps/*": ["./components/*"],
            "@core/*": ["./core/*"],
            "@fixtures/*": ["./fixtures/*"],
            "@lib/*": ["./lib/*"],
            "@orpc/*": ["./api/*"],
            "@prisma/*": ["./prisma/*"],
            "@public/*": ["./public/*"],
            "@services/*": ["./services/*"],
            "@shadcn/*": ["./components/SHADCN/*"],
            "@test/*": ["./test/*"],
            "@ui/*": ["./components/UI/*"],
            "@utils/*": ["./utils/*"],
            "@/*": ["./*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.mts", ".next/types/**/*.ts", ".next/dev/types/**/*.ts"],
    "exclude": ["node_modules", ".next"]
}
