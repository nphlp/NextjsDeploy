{
    "name": "nextjs-deploy",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "prepare": "husky || true",
        "dev": "next dev --turbopack",
        "build": "next build --turbopack",
        "build:analyze": "ANALYZE=true next build",
        "start": "next start",
        "auto": "pnpm install && pnpm db:reload && pnpm prisma:generate && pnpm prisma:deploy && pnpm fixtures:reload && pnpm dev",
        "auto:start": "pnpm install && pnpm db:reload && pnpm prisma:generate && pnpm prisma:deploy && pnpm fixtures:reload && pnpm build && pnpm start",
        "lint": "eslint",
        "lint:fix": "eslint . --fix",
        "format": "prettier . --check",
        "format:fix": "prettier . --write",
        "type": "tsc --noEmit",
        "checks": "pnpm lint && pnpm format && pnpm type",
        "db:setup": "./scripts/db.sh setup",
        "db:reset": "./scripts/db.sh reset",
        "db:reload": "./scripts/db.sh reload",
        "db:execute": "./scripts/db.sh execute",
        "prisma:generate": "pnpm dlx prisma generate",
        "prisma:migrate": "pnpm dlx prisma migrate dev",
        "prisma:deploy": "pnpm dlx prisma migrate deploy",
        "prisma:reset": "pnpm dlx prisma migrate reset",
        "fixtures:setup": "tsx scripts/fixtures.ts setup",
        "fixtures:reset": "tsx scripts/fixtures.ts reset",
        "fixtures:reload": "tsx scripts/fixtures.ts reload",
        "generate:list": "tsx scripts/generator.ts list",
        "generate:clear": "tsx scripts/generator.ts clear",
        "generate:all": "tsx scripts/generator.ts all"
    },
    "dependencies": {
        "@prisma/client": "6.16.2",
        "@radix-ui/react-slot": "^1.2.3",
        "class-variance-authority": "^0.7.1",
        "dayjs": "^1.11.18",
        "next": "^15.6.0-canary.16",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "tsx": "^4.20.5"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@commitlint/types": "^19.8.1",
        "@eslint/eslintrc": "^3.3.1",
        "@headlessui/react": "^2.2.8",
        "@next/bundle-analyzer": "^15.5.3",
        "@next/eslint-plugin-next": "^15.5.3",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^11.0.6",
        "@tailwindcss/postcss": "^4.1.13",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/lodash": "^4.17.20",
        "@types/node": "^24.5.2",
        "@types/react": "^19.1.13",
        "@types/react-dom": "^19.1.9",
        "@typescript-eslint/eslint-plugin": "^8.44.0",
        "@typescript-eslint/parser": "^8.44.0",
        "better-auth": "^1.3.26",
        "clsx": "^2.1.1",
        "eslint": "^9.35.0",
        "eslint-config-next": "^15.5.3",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "eslint-plugin-unused-imports": "^4.2.0",
        "handlebars": "^4.7.8",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.6",
        "lodash": "^4.17.21",
        "lucide-react": "^0.544.0",
        "motion": "^12.23.15",
        "nanoid": "^5.1.5",
        "nuqs": "^2.6.0",
        "postcss": "^8.5.6",
        "prettier": "3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "prisma": "^6.16.2",
        "semantic-release": "^24.2.8",
        "server-only": "^0.0.1",
        "tailwind-merge": "^3.3.1",
        "tailwindcss": "^4.1.13",
        "tw-animate-css": "^1.4.0",
        "typescript": "^5.9.2",
        "typescript-cookie": "^1.0.6",
        "zod": "^4.1.9",
        "zustand": "^5.0.8"
    },
    "lint-staged": {
        "*.{js,ts,tsx}": "eslint --fix",
        "*.{js,ts,tsx,json,css,md,yml,yaml}": "prettier --write"
    }
}
